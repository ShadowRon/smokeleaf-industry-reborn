<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
 
			<!-- Devilsleaf -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DevilsleafFabric"]/statBases</xpath>
				<value>
					<Bulk>0.05</Bulk>
					<WornBulk>0.5</WornBulk>
				</value>
			</li>
 
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DevilsleafFabric"]/stuffProps/statFactors</xpath>
				<value>
					<Mass>0.90</Mass>
				</value>
			</li>
 
			<!-- slightly weaker than pure devilstrand -->
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DevilsleafFabric"]/statBases/StuffPower_Armor_Sharp</xpath>
				<value>
					<StuffPower_Armor_Sharp>0.4</StuffPower_Armor_Sharp>
				</value>
			</li>
 
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DevilsleafFabric"]/statBases/StuffPower_Armor_Blunt</xpath>
				<value>
					<StuffPower_Armor_Blunt>0.1</StuffPower_Armor_Blunt>
				</value>
			</li>
 
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DevilsleafFabric"]/statBases/StuffPower_Armor_Heat</xpath>
				<value>
					<StuffPower_Armor_Heat>0.05</StuffPower_Armor_Heat>
					<StuffPower_Armor_Electric>0.05</StuffPower_Armor_Electric>
				</value>
			</li>
 
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="DevilsleafFabric"]/stuffProps/statFactors/Flammability</xpath>
				<value>
					<Flammability>0.1</Flammability>
				</value>
			</li>
 
			<li Class="PatchOperationConditional">
				<xpath>Defs/ThingDef[defName="DevilsleafFabric"]/stuffProps/categories</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DevilsleafFabric"]/stuffProps</xpath>
					<value>
						<categories>
						  <li>SoftArmor</li>
						</categories>
					</value>
				</nomatch>
				<match Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="DevilsleafFabric"]/stuffProps/categories</xpath>
					<value>
						<li>SoftArmor</li>
					</value>
				</match>
			</li>
 
			<!-- Biocomposite -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="HempBiocomposite"]/statBases</xpath>
				<value>
					<Bulk>0.02</Bulk>
				</value>
			</li>
 
			<!-- slightly stronger than steel -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="HempBiocomposite"]/stuffProps/categories</xpath>
				<value>
					<li>Metallic_Weapon</li>
					<li>Steeled</li>
				</value>
			</li>
 
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HempBiocomposite"]/statBases/StuffPower_Armor_Sharp</xpath>
				<value>
					<StuffPower_Armor_Sharp>1.1</StuffPower_Armor_Sharp>
				</value>
			</li>
 
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HempBiocomposite"]/statBases/StuffPower_Armor_Blunt</xpath>
				<value>
					<StuffPower_Armor_Blunt>1.6</StuffPower_Armor_Blunt>
				</value>
			</li>
 
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HempBiocomposite"]/statBases/StuffPower_Armor_Heat</xpath>
				<value>
					<StuffPower_Armor_Heat>0.40</StuffPower_Armor_Heat>
				</value>
			</li>
 
			<!-- Nanosheet -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="HempNanosheet"]/statBases</xpath>
				<value>
					<Bulk>0.025</Bulk>
				</value>
			</li>
 
			<!-- slightly stronger than plasteel -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="HempNanosheet"]/stuffProps/categories</xpath>
				<value>
					<li>Metallic_Weapon</li>
					<li>Steeled</li>
				</value>
			</li>
 
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HempNanosheet"]/statBases/StuffPower_Armor_Sharp</xpath>
				<value>
					<StuffPower_Armor_Sharp>2.5</StuffPower_Armor_Sharp>
				</value>
			</li>
 
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HempNanosheet"]/statBases/StuffPower_Armor_Blunt</xpath>
				<value>
					<StuffPower_Armor_Blunt>4</StuffPower_Armor_Blunt>
				</value>
			</li>
 
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="HempNanosheet"]/statBases/StuffPower_Armor_Heat</xpath>
				<value>
					<StuffPower_Armor_Heat>0.50</StuffPower_Armor_Heat>
				</value>
			</li>
 
			</operations>		
		</match>
	</Operation>
</Patch>